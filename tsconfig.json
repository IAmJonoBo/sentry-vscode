{
  "extends": "./node_modules/@sentry/typescript/tsconfig.json", // Ensure 'noImplicitUseStrict' is not in the extended config
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "outDir": "out",
    "lib": ["es6"],
    "rootDir": "src",
    "noImplicitUseStrict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}
