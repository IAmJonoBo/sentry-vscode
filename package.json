{
    "name": "vscode-sentry",
    "displayName": "Sentry",
    "description": "Editor integration for sentry.io",
    "version": "0.0.1",
    "repository": "https://github.com/getsentry/vscode-sentry",
    "publisher": "Sentry",
    "license": "MIT",
    "engines": {
        "vscode": "^1.99.3"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Sentry extension configuration",
            "properties": {
                "sentry.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enables or disables all Sentry functionality."
                },
                "sentry.serverUrl": {
                    "type": "string",
                    "default": "https://sentry.io",
                    "description": "Sentry server URL for on-premise."
                },
                "sentry.projects": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "description": "Organization and project slugs used for searching issues (e.g. \"my-org/my-project\")"
                },
                "sentry.searchPaths": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "description": "Local paths to search for source files. The workspace directory and common system locations will be searched by default."
                }
            }
        },
        "commands": [
            {
                "command": "sentry.showProjectPick",
                "title": "Select Project",
                "category": "Sentry"
            },
            {
                "command": "sentry.showIssueSearch",
                "title": "Search Issues",
                "category": "Sentry"
            }
        ],
        "debuggers": [
            {
                "type": "sentry",
                "label": "Sentry Virtual Debugger",
                "program": "./out/debugger/launcher.js",
                "runtime": "node"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "sentry.showProjectPick",
                    "when": "sentry:enabled"
                },
                {
                    "command": "sentry.showIssueSearch",
                    "when": "sentry:enabled"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@sentry/typescript": "^5.20.1",
        "@types/ini": "^4.1.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.14.1",
        "@types/util.promisify": "^1.0.9",
        "@typescript-eslint/eslint-plugin": "^8.30.1",
        "@typescript-eslint/parser": "^8.30.1",
        "eslint": "^9.24.0",
        "tslint": "^6.1.3",
        "typescript": "^5.8.3",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "ini": "^5.0.0",
        "request-light": "^0.8.0",
        "util.promisify": "^1.1.3",
        "vscode-debugadapter": "1.51.0",
        "vscode-debugprotocol": "1.51.0"
    }
}
