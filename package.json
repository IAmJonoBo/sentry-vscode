{
    "name": "vscode-sentry",
    "displayName": "Sentry",
    "description": "Editor integration for sentry.io",
    "version": "0.0.1",
    "publisher": "Sentry",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "sentry.showIssueSearch",
                "title": "Search Issues",
                "category": "Sentry"
            },
            {
                "command": "sentry.startDebugger",
                "title": "Start Debugger",
                "category": "Sentry"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "sentry.showIssueSearch",
                    "when": "sentry:enabled"
                },
                {
                    "command": "sentry.startDebugger",
                    "when": "sentry:enabled"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "sentry",
                    "title": "Sentry",
                    "icon": "resources/sentry-glyph.svg",
                    "when": "sentry:enabled"
                }
            ]
        },
        "views": {
            "sentry": [
                {
                    "id": "sentry-issues",
                    "name": "Issues",
                    "when": "sentry:enabled"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@sentry/typescript": "^4.0.0-beta.12",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
